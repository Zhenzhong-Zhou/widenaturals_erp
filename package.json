{
  "name": "widenaturals-erp",
  "version": "2.1.0",
  "description": "Monorepo for WIDE Naturals Inc. ERP system, including client and server.",
  "keywords": [
    "erp",
    "monorepo",
    "widenaturals",
    "client",
    "server"
  ],
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fix:imports": "eslint \"client/src/**/*.{ts,tsx}\" --fix",
    "fix:imports:codemod": "find client/src -type f \\( -name \"*.ts\" -o -name \"*.tsx\" \\) -print0 | xargs -0 perl -pi -e \"s{(from\\s+['\\\"][^'\\\"]+)\\.(ts|tsx)(['\\\"])}{\\$1\\$3}g; s{(import\\(\\s*['\\\"][^'\\\"]+)\\.(ts|tsx)(['\\\"]\\s*\\))}{\\$1\\$3}g; s{(export\\s+\\*\\s+from\\s+['\\\"][^'\\\"]+)\\.(ts|tsx)(['\\\"])}{\\$1\\$3}g\"",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^7.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3"
  }
}
